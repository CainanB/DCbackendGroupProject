<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/templates/head.ejs')  %> 
  </head>
  <body style="background-color: #e5e5e5;">

    <div class="container-fluid">

    <%- include('partials/content/header.ejs')  %> 

      <!-- <div class="row mb-5">
        
      </div> -->

      <div class="row pr-0">

        <div class="col-lg-3 pt-5 prof">

            <div class="row pt-3 pb-2">
                <div class="row d-flex justify-content-center w-100" style="height:28px;display:inline-block;">
                    <%= username %> 
                    <span id="userIDspan" style="display:none;"> <%= userID %></span>
                </div>

                <div class="col d-flex justify-content-center w-100">
                    <% if (hasProfilePhoto == 'true') { %>
                        <img height="200px" id="profilePhoto" src="/image">
                    <% }else{ %> 
                        <img height="200px" id="profilePhoto" src="../images/placeholder.png" alt="">
                    <% } %> 
                </div>

                <form id="uploadForm" class="w-100" action="/upload" method="post" enctype="multipart/form-data">

                    <div class="col pt-1 d-flex justify-content-center w-100">

                            
                        <label id="chooseFile" for="files" style="cursor:pointer;display:block;" class="btn upload btn-danger">Upload Image</label>
                        <input id="files" style="display:none;" type="file" accept="image/*" name="photo" >
                
                    </div>

                    <div class="col d-flex justify-content-center w-100">

                        <!-- <label id="uploadProfileImageButton"for="submit" style="cursor:pointer;display:block; display:none;" class="btn upload btn-danger">Upload Photo</label>
                        <input id="submit" type="submit" style="display:none;" value="upload"> -->

                    </div>

                </form>

                <div class="col d-flex justify-content-center w-100">
                    <ul style="padding-left:0px;">
                        <!-- <li class="profileLink">Notifications</li> -->
                        <li id="deleteAccountButton" class="profileLink">Delete Account</li>
                    </ul> 
                </div>

            </div>

            <!-- <div class="row pt-2 justify-content-start">

            </div> -->

        </div>

        <div class="col-lg-9 pt-5 pl-5 reviews">
            
            <div class="row w-100 pt-3">
                <h1 class="ml-2" style="font-family:inherit;font-size:80px;"> <%= username %>'s  <span style="color:rgb(255, 11, 11)">fire</span><img src="../../../images/FireAlone.png" class="mb-2" alt="fireTakesLogo" style="height:40px;width:48px;"></a> reviews</h1>
                
            </div>
            <hr>
            <!-- REMOVED CODE IN PROFILE.JS ROUTE FILE GOES HERE -->
            <div id="userReviewsBlock">

            </div>
        </div>

    </div> 


    <div id="deleteModal" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            
            <h5 class="modal-title m-2 d-flex justify-content-center">Delete this review?</h5>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="deleteConfirmButton" type="button" class="btn btn-danger" data-dismiss="modal">Confirm</button>
            </div>
         </div>
         
        </div>
      </div>

    <div id="deleteAccountModal" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            
            <h6 class="modal-title m-2">Really, you want to delete your account?</h6>
                <h6 class="modal-title m-2">Fine. We didn't want you anyway.</h6>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="deleteAccountConfirmButton" type="button" class="btn btn-danger" data-dismiss="modal">Confirm</button>
            </div>
         </div>
         
        </div>
    </div>

    <%- include('partials/content/footer.ejs')  %> 

</div><!-- end container fluid -->


    <%- include('partials/templates/defaults.ejs')  %> 
    <script src="/js/profile.js" type="text/javascript"></script>
  </body>
</html>